{
    "name": "entertainment-tadka-bot",
    "description": "Telegram Bot for Entertainment Tadka",
    "type": "project",
    "require": {
        "php": ">=8.1.0"
    },
    "require-dev": {
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "autoload": {
        "files": ["index.php"]
    },
    "scripts": {
        "post-install-cmd": [
            "chmod 666 users.json movies.csv error.log || true",
            "mkdir -p backups cache",
            "chmod 777 backups cache"
        ]
    }
}