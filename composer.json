{
    "name": "entertainment-tadka/bot",
    "description": "Telegram Movie Search Bot",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Entertainment Tadka",
            "email": "admin@entertainmenttadka.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "monolog/monolog": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": ["index.php"]
    },
    "scripts": {
        "post-install-cmd": [
            "chmod 777 cache backups logs",
            "touch error.log && chmod 666 error.log"
        ],
        "post-update-cmd": [
            "echo 'Bot updated successfully!'"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}